<root>

<!--
Both:
 - id
 - container
 - yield
 - collisionRect
 - deconstructs

Client only:
 - name
 - xDrawOffset
 - yDrawOffset
 - isFlat
 - gatherSound

Server only:
 - constructionTimer
 - gatherReq
 - class
-->

<objectType
    id="tree"
    name="Tree"
    xDrawOffset=-20
    yDrawOffset=-47
    canGather=1
    gatherSound="chop-pause"
    gatherReq="axe"
    gatherTime=3000 >
    <yield id="wood" initialMean=6 initialSD=0.8 />
    <collisionRect x=-5 y=-5 w=10 h=10 />
</objectType>

<objectType
    id="branch"
    gatherTime=1000
    name="Branch"
    xDrawOffset=-14
    yDrawOffset=-12
