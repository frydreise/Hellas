    gatherReq="axe"
    gatherTime=3000 >
    <yield id="wood" initialMean=6 initialSD=0.8 />
    <collisionRect x=-7 y=-3 w=16 h=6 />
</objectType>

<objectType
    id="branch"
    gatherTime=1000
    name="Branch"
