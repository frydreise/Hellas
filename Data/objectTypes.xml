<root>

<!--
Both:
 - id
 - container
 - yield
 - collisionRect
 - deconstructs

Client only:
 - name
 - xDrawOffset
 - yDrawOffset
 - isFlat
 - gatherSound

Server only:
 - constructionTimer
 - gatherReq
 - class
-->

<objectType
    id="tree"
    name="Tree"
    xDrawOffset=-23
    yDrawOffset=-57
    canGather=1
